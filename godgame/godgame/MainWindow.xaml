<Window x:Class="godgame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:godgame"
        mc:Ignorable="d"
        Title="Годвиль 3.0" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Отладка персонажа">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="debug" Content="Диагностировать" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,190,0,0"/>
                    <TextBlock x:Name="debugtext" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Margin="115,194,0,0" Width="561"/>
                </Grid>
            </TabItem>
            <TabItem Header="Генерация персонажа">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="saveline" Height="23" TextWrapping="Wrap" Margin="116,358,220,10" VerticalAlignment="Bottom"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Поле для ввода" VerticalAlignment="Bottom" Margin="10,0,0,10" TextAlignment="Center"/>
                    <Button x:Name="read2" Content="Открыть" Margin="571,358,115,10" Height="23" VerticalAlignment="Bottom"/>
                    <Button x:Name="write2" Content="Сохранить" Margin="676,358,10,10" Height="23" VerticalAlignment="Bottom"/>
                    <ListBox x:Name="which" HorizontalAlignment="Left" Height="290" VerticalAlignment="Top" Width="185" Margin="10,31,0,0"/>
                    <ListBox x:Name="who" Margin="200,31,401,70" Width="185"/>
                    <ListBox x:Name="inwitch" Margin="401,31,200,70" Width="185"/>
                    <ListBox x:Name="whose" Margin="591,31,10,70" Width="185"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,10,0,0" Text="Какой"/>
                    <TextBlock TextWrapping="Wrap" Text="Кто" Margin="200,10,536,365"/>
                    <TextBlock TextWrapping="Wrap" Margin="401,10,335,365" Text="В каком"/>
                    <TextBlock TextWrapping="Wrap" Text="Чей" Margin="591,10,145,365"/>
                    <Button x:Name="addwhich" Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="185" Margin="10,326,0,0" Click="addwhich_Click"/>
                    <Button x:Name="addwho" Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="185" Margin="200,326,0,0" Click="addwho_Click"/>
                    <Button x:Name="addinwitch" Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="185" Margin="401,326,0,0" Click="addinwitch_Click"/>
                    <Button x:Name="addwhose" Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="185" Margin="591,326,0,0" Click="addwhose_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Движуха на улице">
            <Grid Background="#FFE5E5E5">
                    <RadioButton Content="RadioButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,42,0,0"/>
                    <RadioButton Content="RadioButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,62,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Движуха дома">
            <Grid Background="#FFE5E5E5">
            </Grid>
            </TabItem>
            <TabItem Header="Журнал">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="perslog" HorizontalAlignment="Left" Height="371" VerticalAlignment="Top" Width="381" Margin="10,10,0,0"/>
                    <ListBox x:Name="femlog" HorizontalAlignment="Left" Height="371" VerticalAlignment="Top" Width="380" Margin="396,10,0,0"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
