<Window x:Class="godgame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:godgame"
        mc:Ignorable="d"
        Title="Годвиль 3.0" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Отладка персонажа">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="185*"/>
                        <RowDefinition Height="22*"/>
                        <RowDefinition Height="185*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="225*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="debug" Content="Диагностировать" Margin="10,0,5,0" Click="Debug_Click" Grid.Row="1" Height="22"/>
                    <TextBlock x:Name="debugtext" TextWrapping="Wrap" Margin="0,0,115,0" Text="Здесь будет сгенерированная строка" Grid.Column="1" Grid.Row="1" TextAlignment="Center"/>
                </Grid>
            </TabItem>
            <TabItem Header="Генерация персонажа">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="320*"/>
                        <RowDefinition Height="38*"/>
                        <RowDefinition Height="33*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="190*"/>
                        <ColumnDefinition Width="190*"/>
                        <ColumnDefinition Width="190*"/>
                        <ColumnDefinition Width="190*"/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="saveline" Height="23" TextWrapping="Wrap" Margin="105,0,26,10" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="2"/>
                    <TextBlock TextWrapping="Wrap" Text="Поле для ввода" Margin="0,4,91,13" TextAlignment="Center" Grid.Row="2" Grid.Column="1"/>
                    <Button x:Name="read2" Content="Открыть" Margin="170,0,112,10" Height="23" Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2" Click="Read2_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Button x:Name="write2" Content="Сохранить" Margin="91,0,0,10" Height="23" Grid.Column="4" Grid.Row="2" Click="Write2_Click"/>
                    <ListBox x:Name="which" Margin="0,30,5,0" Grid.Column="1"/>
                    <ListBox x:Name="who" Margin="5,30,5,0" Grid.Column="2"/>
                    <ListBox x:Name="inwitch" Margin="5,30,5,0" Grid.Column="3"/>
                    <ListBox x:Name="whose" Margin="5,30,0,0" Grid.Column="4"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,9,155,295" Text="Какой" Grid.Column="1"/>
                    <TextBlock TextWrapping="Wrap" Text="Кто" Margin="5,8,153,295" Grid.Column="2"/>
                    <TextBlock TextWrapping="Wrap" Margin="5,8,142,295" Text="В каком" Grid.Column="3"/>
                    <TextBlock TextWrapping="Wrap" Text="Чей" Margin="5,8,130,295" Grid.Column="4"/>
                    <Button x:Name="addwhich" Content="Добавить" Margin="0,5,5,10" Click="Addwhich_Click" Grid.Column="1" Grid.Row="1"/>
                    <Button x:Name="addwho" Content="Добавить" Margin="5,5,5,10" Click="Addwho_Click" Grid.Column="2" Grid.Row="1"/>
                    <Button x:Name="addinwitch" Content="Добавить" Margin="5,5,5,10" Click="Addinwitch_Click" Grid.Column="3" Grid.Row="1"/>
                    <Button x:Name="addwhose" Content="Добавить" Margin="5,5,0,10" Click="Addwhose_Click" Grid.Column="4" Grid.Row="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Движуха на улице">
                <Grid Background="#FFE5E5E5">
                    <RadioButton Content="RadioButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,42,0,0"/>
                    <RadioButton Content="RadioButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,62,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Движуха дома">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
            <TabItem Header="Журнал">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="196*"/>
                        <ColumnDefinition Width="196*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="perslog" Margin="10,15,5,10"/>
                    <ListBox x:Name="femlog" Margin="5,15,10,10" Grid.Column="1"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
